{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "predev": "echo 'Iniciando Next.js...'",
    "dev": "node scripts/dev-wrapper.js",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": " node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "ESLINT_USE_FLAT_CONFIG=false eslint . --max-warnings=0",
    "lint:eslint:fix": "eslint . --fix",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@commitlint/config-conventional": "19.7.1",
    "async-retry": "1.3.3",
    "bcryptjs": "^3.0.2",
    "cookie": "1.0.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.5.12",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.9.1",
    "pg": "8.13.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "swr": "2.3.3",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.21.0",
    "eslint-config-next": "15.2.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.2",
    "set-cookie-parser": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "24"
  }
}
